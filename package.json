{
  "name": "marilena",
  "version": "1.0.4",
  "description": "a tool to build emails with cool tools like mjml and different template engine like handlebars or eta.js",
  "scripts": {
    "build": "npm run copy && etsc",
    "copy": "mkdir -p dist/pages && cp src/pages/*.html dist/pages",
    "start": "node dist/server.js",
    "dev": "nodemon",
    "build-emails": "clear && npm run build && node ./dist/lib/buildAllEmails.js",
    "test": "jest --silent=true",
    "jest-clean-cache": "jest --clearCache",
    "prepare": "husky install",
    "release": "release-it"
  },
  "bin": {
    "marilena": "./bin/marilena.js"
  },
  "main": "dist/server.js",
  "repository": {
    "type": "github",
    "url": "https://github.com/multivoltage/marilena"
  },
  "files": [
    "bin",
    "dist",
    "README.md"
  ],
  "keywords": [
    "mjml",
    "emails",
    "template engine",
    "email tool",
    "email development"
  ],
  "author": "diego tonini <diego.tonini93@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@fastify/view": "^7.4.1",
    "@fastify/websocket": "^7.1.3",
    "ejs": "^3.1.9",
    "esbuild-node-tsc": "^2.0.5",
    "eta": "^2.0.1",
    "fastify": "^4.14.1",
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.8",
    "mjml": "^4.14.1",
    "node-color-log": "^10.0.2",
    "node-html-parser": "^6.1.5",
    "node-watch": "^0.7.3",
    "string-strip-html": "^8.5.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@release-it/keep-a-changelog": "^3.1.0",
    "@types/js-yaml": "^4.0.5",
    "@types/mjml": "^4.7.0",
    "@types/node": "^18.15.0",
    "esbuild": "0.18.9",
    "handlebars": "^4.7.7",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.7",
    "release-it": "^15.10.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{ts,js,css,md}": "prettier --write"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  }
}

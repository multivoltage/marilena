{
  "name": "marilena",
  "version": "0.0.6",
  "description": "a tool to build emails with cool tools like mjml and different template engine lime handlebars or eta.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && npm run copy",
    "copy": "mkdir -p dist/pages && cp src/pages/*.html dist/pages",
    "compile-dev": "npm run build && node ./dist/server.js",
    "start": "clear && nodemon -e ts --exec \"npm run compile-dev\"",
    "build-emails": "clear && npm run build && node ./dist/lib/buildAllEmails.js",
    "test": "jest --silent=true",
    "jet-clean-cache": "jest --clearCache",
    "prepare": "husky install",
    "release": "release-it"
  },
  "bin": {
    "marilena": "./bin/marilena.js"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/multivoltage/marilena"
  },
  "files": [
    "bin",
    "dist",
    "README.md"
  ],
  "keywords": [
    "mjml",
    "emails",
    "templa engine",
    "email tool",
    "email development"
  ],
  "author": "diego tonini <diego.tonini93@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@fastify/view": "^7.4.1",
    "@fastify/websocket": "^7.1.3",
    "ejs": "^3.1.9",
    "eta": "^2.0.1",
    "fastify": "^4.14.1",
    "minimist": "^1.2.8",
    "mjml": "^4.13.0",
    "node-color-log": "^10.0.2",
    "node-html-parser": "^6.1.5",
    "node-watch": "^0.7.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/mjml": "^4.7.0",
    "@types/node": "^18.15.0",
    "handlebars": "^4.7.7",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.7",
    "release-it": "^15.10.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{ts,js,css,md}": "prettier --write"
  }
}
